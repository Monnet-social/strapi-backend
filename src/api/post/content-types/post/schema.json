{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "posted_by": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "tagged_users": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user"
    },
    "location": {
      "type": "component",
      "component": "location.location",
      "repeatable": false
    },
    "link": {
      "type": "string"
    },
    "post_type": {
      "type": "enumeration",
      "enum": ["story", "post"]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "media": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "viewers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user"
    },
    "share_with": {
      "type": "enumeration",
      "default": "PUBLIC",
      "enum": ["PUBLIC", "FOLLOWERS", "CLOSE-FRIENDS"]
    },
    "repost_of": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::post.post"
    },
    "share_with_close_friends": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user"
    },
    "reposted_from": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
